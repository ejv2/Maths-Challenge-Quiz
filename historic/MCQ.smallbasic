                    EndIf
                EndIf
            EndIf
      EndFor


     ElseIf round_selector = 5 then
  
        prev_skip = 0
  
        TextWindow.WriteLine("Division round")
        TextWindow.WriteLine("Successfully divide the number to gain marks")
