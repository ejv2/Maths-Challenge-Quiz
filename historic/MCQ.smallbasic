        TextWindow.WriteLine("")
        TextWindow.WriteLine("You will answer " + num_qs + " questions this round")

        for i = 1 to num_qs Step 1
            q_type = Math.GetRandomNumber(2)

            num_questions = num_questions + 1

            if q_type = 1 then
